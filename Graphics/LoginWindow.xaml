<Controls:MetroWindow x:Class="Server.Graphics.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:Server.ViewModel"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="Remote controller" Height="180" Width="368.382"
        ResizeMode="NoResize"
        ShowCloseButton="False"
        WindowStartupLocation="CenterScreen"
        Closing="LoginWindow_Closing"
        GlowBrush="{DynamicResource AccentColorBrush}"
        ShowInTaskbar="False" Visibility="Hidden" >
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Controls:ProgressRing Grid.Row="0" IsActive="True" Height="50" Width="50"  />
        <Label Grid.Row="1" x:Name="messageLabel" HorizontalContentAlignment="Center"  Margin="20,5,20,5"/>
        <Button Grid.Row="2" Width="74" Content="Back" IsCancel="True"  HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Click" />
    </Grid>
</Controls:MetroWindow>
